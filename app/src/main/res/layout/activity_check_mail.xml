<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".check_mail"
    android:background="@color/backgroundcolor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="350dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Check Your Email"
            android:fontFamily="@font/poppins"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:gravity="center">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:paddingTop="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We have send you a reset password link"
            android:textColor="#ABB4BD"
            android:gravity="center"
            android:textSize="15sp"
            android:fontFamily="@font/poppins">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="on your registered email address."
            android:textSize="15sp"
            android:textColor="#ABB4BD"
            android:gravity="center"
            android:fontFamily="@font/poppins">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to Email"
            android:background="@drawable/login_and_signin_buttons"
            android:textColor="#ffffffff"
            android:fontFamily="@font/poppins"
            android:textStyle="normal"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingLeft="80dp"
            android:paddingRight="80dp">
        </Button>

    </LinearLayout>

</LinearLayout>